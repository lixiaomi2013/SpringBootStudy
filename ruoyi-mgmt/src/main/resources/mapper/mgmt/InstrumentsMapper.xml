<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.mgmt.mapper.InstrumentsMapper">
    
    <resultMap type="Instruments" id="InstrumentsResult">
        <result property="instrumentId"    column="instrument_id"    />
        <result property="instrumentCode"    column="instrument_code"    />
        <result property="serialNumber"    column="serial_number"    />
        <result property="instrumentName"    column="instrument_name"    />
        <result property="model"    column="model"    />
        <result property="specification"    column="specification"    />
        <result property="brand"    column="brand"    />
        <result property="category"    column="category"    />
        <result property="purchaseDate"    column="purchase_date"    />
        <result property="price"    column="price"    />
        <result property="supplierId"    column="supplier_id"    />
        <result property="warrantyPeriod"    column="warranty_period"    />
        <result property="location"    column="location"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectInstrumentsVo">
        select instrument_id, instrument_code, serial_number, instrument_name, model, specification, brand, category, purchase_date, price, supplier_id, warranty_period, location, status, del_flag, create_by, create_time, update_by, update_time, remark from t_mgmt_instruments
    </sql>

    <select id="selectInstrumentsList" parameterType="Instruments" resultMap="InstrumentsResult">
        <include refid="selectInstrumentsVo"/>
        <where>  
            <if test="instrumentCode != null  and instrumentCode != ''"> and instrument_code = #{instrumentCode}</if>
            <if test="serialNumber != null  and serialNumber != ''"> and serial_number = #{serialNumber}</if>
            <if test="instrumentName != null  and instrumentName != ''"> and instrument_name like concat('%', #{instrumentName}, '%')</if>
            <if test="model != null  and model != ''"> and model = #{model}</if>
            <if test="specification != null  and specification != ''"> and specification = #{specification}</if>
            <if test="brand != null  and brand != ''"> and brand = #{brand}</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="purchaseDate != null  and purchaseDate != ''"> and purchase_date = #{purchaseDate}</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="supplierId != null  and supplierId != ''"> and supplier_id = #{supplierId}</if>
            <if test="warrantyPeriod != null "> and warranty_period = #{warrantyPeriod}</if>
            <if test="location != null  and location != ''"> and location = #{location}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectInstrumentsByInstrumentId" parameterType="String" resultMap="InstrumentsResult">
        <include refid="selectInstrumentsVo"/>
        where instrument_id = #{instrumentId}
    </select>

    <insert id="insertInstruments" parameterType="Instruments">
        insert into t_mgmt_instruments
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="instrumentId != null">instrument_id,</if>
            <if test="instrumentCode != null and instrumentCode != ''">instrument_code,</if>
            <if test="serialNumber != null">serial_number,</if>
            <if test="instrumentName != null and instrumentName != ''">instrument_name,</if>
            <if test="model != null">model,</if>
            <if test="specification != null">specification,</if>
            <if test="brand != null">brand,</if>
            <if test="category != null">category,</if>
            <if test="purchaseDate != null">purchase_date,</if>
            <if test="price != null">price,</if>
            <if test="supplierId != null">supplier_id,</if>
            <if test="warrantyPeriod != null">warranty_period,</if>
            <if test="location != null">location,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="instrumentId != null">#{instrumentId},</if>
            <if test="instrumentCode != null and instrumentCode != ''">#{instrumentCode},</if>
            <if test="serialNumber != null">#{serialNumber},</if>
            <if test="instrumentName != null and instrumentName != ''">#{instrumentName},</if>
            <if test="model != null">#{model},</if>
            <if test="specification != null">#{specification},</if>
            <if test="brand != null">#{brand},</if>
            <if test="category != null">#{category},</if>
            <if test="purchaseDate != null">#{purchaseDate},</if>
            <if test="price != null">#{price},</if>
            <if test="supplierId != null">#{supplierId},</if>
            <if test="warrantyPeriod != null">#{warrantyPeriod},</if>
            <if test="location != null">#{location},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateInstruments" parameterType="Instruments">
        update t_mgmt_instruments
        <trim prefix="SET" suffixOverrides=",">
            <if test="instrumentCode != null and instrumentCode != ''">instrument_code = #{instrumentCode},</if>
            <if test="serialNumber != null">serial_number = #{serialNumber},</if>
            <if test="instrumentName != null and instrumentName != ''">instrument_name = #{instrumentName},</if>
            <if test="model != null">model = #{model},</if>
            <if test="specification != null">specification = #{specification},</if>
            <if test="brand != null">brand = #{brand},</if>
            <if test="category != null">category = #{category},</if>
            <if test="purchaseDate != null">purchase_date = #{purchaseDate},</if>
            <if test="price != null">price = #{price},</if>
            <if test="supplierId != null">supplier_id = #{supplierId},</if>
            <if test="warrantyPeriod != null">warranty_period = #{warrantyPeriod},</if>
            <if test="location != null">location = #{location},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where instrument_id = #{instrumentId}
    </update>

    <delete id="deleteInstrumentsByInstrumentId" parameterType="String">
        delete from t_mgmt_instruments where instrument_id = #{instrumentId}
    </delete>

    <delete id="deleteInstrumentsByInstrumentIds" parameterType="String">
        delete from t_mgmt_instruments where instrument_id in 
        <foreach item="instrumentId" collection="array" open="(" separator="," close=")">
            #{instrumentId}
        </foreach>
    </delete>

</mapper>